<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="anonymous-all">

    <transition name="createPartyGroup">
        <service-call name="create#party.PartyGroup"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="party.PartyGroup" list="partyGroupList">
        </entity-find>
    </actions>
    <widgets>


        <container-dialog id="CreatePartyGroupDialog" button-text="Create PartyGroup">
            <form-single name="CreatePartyGroup" transition="createPartyGroup">
                <auto-fields-entity entity-name="party.PartyGroup" field-type="edit"/>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>

        <form-list name="PartyGroupList" list="PartyGroupList" header-dialog="true" skip-form="true" >
            <auto-fields-entity entity-name="party.PartyGroup" field-type="display"/>
        </form-list>

    </widgets>

</screen>

